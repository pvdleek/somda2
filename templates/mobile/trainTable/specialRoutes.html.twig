{% extends('mobile/base.html.twig') %}

{% block content %}
    <table>
        <tr><th colspan="2">Bijzondere ritten</th></tr>
        {% for specialRoute in specialRoutes %}
            <tr>
                <td>
                    {{ specialRoute.start_date|displayDateTime(false, true) }}
                    {% if specialRoute.end_date is not null %} {{ 'general.date.till'|trans }} {{ specialRoute.end_date|displayDateTime(false, true) }}{% endif %}
                    {{ specialRoute.start_date|date('Y') }}
                </td>
                <td><a href="{{ path('special_route', { 'id': specialRoute.id }) }}">{{ specialRoute.title }}</a></td>
            </tr>
        {% else %}
            <tr><td colspan="2">Op dit moment zijn er geen bijzondere ritten beschikbaar</td></tr>
        {% endfor %}
    </table>
{% endblock %}
