{% extends('mobile/base.html.twig') %}

{% block content %}
    <div><i class="fas fa-comments"></i> Bericht melden uit "{{ post.discussion.title }}"</div>

    <br />
    <p class="info">Gebruik deze functie om de moderators en administrators op de hoogte te stellen van berichten die verkeerd geplaatst zijn of in overtreding zijn met de regels van het forum.</p>
    <br />

    {{ form_start(form, { 'attr': { 'id': 'alert_form' } }) }}
        <table align="center">
            {{ form_row(form.comment) }}
            <tr>
                <td colspan="2">
                    <a class="somda-button" href="#" onclick="$('#alert_form').submit(); return false;">Meld bericht</a>
                    <a class="somda-button" href="{{ path('forum_discussion_post', { 'id': post.discussion.id, 'post_id': post.id, 'name': (post.discussion.title | slug )}) }}">Terug naar het bericht</a>
                </td>
            </tr>
        </table>
    {{ form_end(form) }}

    <br />

    <table align="center">
        {% include 'mobile/forum/post.html.twig' with { 'mayPost': false, 'userIsModerator': false, 'postIsUnread': false } %}
    </table>
{% endblock %}
