{% extends('base.html.twig') %}

{% block content %}
    <div class="panel">
        <div class="panel-title">Somda nieuws</div>
        <div class="panel-content">
            <table>
                <tr><th>Datum</th><th>Titel</th></tr>
                {% for item in news %}
                    <tr>
                        <td>{{ item.timestamp|displayDateTime(true) }}</td>
                        <td>{{ item.archived ? '<i class="fas fa-archive"></i>' : '<i class="fas fa-newspaper"></i>' }} <a href="{{ path('news_text', { 'id': item.id }) }}">{{ item.title }}</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
