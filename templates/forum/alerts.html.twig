{% extends('base.html.twig') %}

{% block content %}
    <div class="panel">
        <div class="panel-title"><i class="fas fa-comments"></i> Overzicht van laatste 100 forummeldingen</div>
        <div class="panel-content">
            <table>
                <tr>
                    <th>Status</th>
                    <th>Discussie</th>
                    <th>Melder(s)</th>
                    <th>Aantal meldingen</th>
                    <th>Aantal notities</th>
                    <th>&nbsp;</th>
                </tr>
                {% for alert in alerts %}
                    <tr>
                        <td>{{ alert.closed ? 'Afgehandeld' : 'Open' }}</td>
                        <td>{{ alert.discussion_title }}</td>
                        <td>
                            {% for key, sender_id in alert.sender_ids|split(',') %}
                                {{ sender_id|displayUser((alert.sender_usernames|split(','))[key])|raw }}<br />
                            {% endfor %}
                        </td>
                        <td>{{ alert.number_of_alerts }}</td>
                        <td>{{ alert.number_of_notes }}</td>
                        <td>
                            <a class="somda-button" href="{{ path('forum_discussion_post', { 'id': alert.discussion_id, 'name': (alert.discussion_title|slug), 'post_id': alert.post_id }) }}">Bekijk bericht</a>
                            <a class="somda-button" href="{{ path('forum_discussion_post_alerts', { 'id': alert.post_id }) }}">Bekijk melding</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
