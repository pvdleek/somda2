<div class="home-spots-container">
	{% for spot in layoutData[constant('App\\Controller\\HomeController::KEY_SPOTS')] %}
		<div>{{ spot | displaySpot | raw }}</div>
		<div><a href="{{ path('spots_search', { 'max_months': 12, 'search_parameters': '///' ~ spot.train.number ~ '/' }) }}" title="Bekijk alle spots van trein {{ spot.train.number }}"><i class="fas fa-train"></i></a></div>
		<div><a href="{{ path('spots_search', { 'max_months': 12, 'search_parameters': spot.location.name ~ '////' }) }}" title="Bekijk alle spots te {{ spot.location.name }}"><i class="fas fa-map-marker-alt"></i></a></div>
	{% endfor %}
</div>

<br />
<div class="panel-buttons">
	{% if is_granted('ROLE_SPOTS_NEW') %}<a class="somda-button" href="{{ path('spot_input') }}">Spots invoeren</a>{% endif %}
	<a class="somda-button" href="{{ path('spots') }}">Meer spots</a>
</div>
