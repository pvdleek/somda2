{% extends('base.html.twig') %}

{% block content %}
    <br />
    <div align="center">
        <table>
            <tr>
                <th>{{ 'general.output.date'|trans }}</th>
                <th>{{ 'general.output.title'|trans }}</th>
            </tr>
            {% for specialRoute in specialRoutes %}
                <tr>
                    <td>{{ specialRoute.start_date|displayDateTime }}{% if specialRoute.end_date is not null %} {{ 'general.date.till'|trans }} {{ specialRoute.end_date|displayDateTime }}{% endif %}</td>
                    <td><a href="{{ path('special_route', { 'id': specialRoute.id }) }}">{{ specialRoute.title }}</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
